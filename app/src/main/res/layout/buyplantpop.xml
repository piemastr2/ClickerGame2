<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/buyplantpop"
    tools:context="com.musiccoder.clickergame2.ShopActivity">

    <TextView
        android:id="@+id/buyTreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buyTreeProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="0"
        android:textSize="30sp"
        />
    <ProgressBar
        android:id="@+id/buyTreeProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_above="@id/buyTreeSeekBar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"/>

    <SeekBar
        android:id="@+id/buyTreeSeekBar"
        android:layout_width="388dp"
        android:layout_height="78dp"
        android:max="100"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbars="horizontal"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="0"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:text="100"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/coinstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="65dp"
        android:text="You have 99999999 coins"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingTop="100dp"
        android:text="The trees will cost 999 coins"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buyTreeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="200dp"
        android:text="Confirm" />

</RelativeLayout>