<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#466628"
    tools:context="com.musiccoder.clickergame2.Wild">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top2"
        android:layout_width="410dp"
        android:layout_height="320dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/middle">

        <android.support.constraint.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/opponent_hp_bar"
                android:padding="10dp"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"

                android:src="@drawable/temp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/opponent_hp_current"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:src="@drawable/clip_hp_bar"
                />

            <TextView
                android:id="@+id/opponent_hp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70dp"
                android:paddingTop="20dp"
                android:text="99999999/99999999"
                android:textColor="#FFFFFF" />

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/blackbox" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:paddingTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top2">

        <Button
            android:id="@+id/attackbutton"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="Attack"
            app:layout_constraintBottom_toTopOf="@+id/health_bar"
            app:layout_constraintTop_toBottomOf="@+id/top2" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/health_bar"
        app:layout_constraintTop_toBottomOf="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <android.support.constraint.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/player_hp_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:maxWidth="300dp"
                android:maxHeight="66dp"
                android:scaleType="fitCenter"
                android:src="@drawable/temp" />

            <ImageView
                android:id="@+id/player_hp_current"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingTop="7.5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:maxWidth="300dp"
                android:maxHeight="66dp"
                android:src="@drawable/clip_hp_bar"
                />

            <TextView
                android:id="@+id/player_hp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="80dp"
                android:paddingTop="13dp"
                android:text="99999999/99999999"
                android:textColor="#FFFFFF" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
