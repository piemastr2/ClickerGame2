<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context="com.musiccoder.clickergame2.Inn">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="950dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/welcomeinn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME TO THE INN"
            android:textSize="38sp"
            android:paddingLeft="9dp" />

        <TextView
            android:id="@+id/emptystring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/healtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rest up, Hero!"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/emptystring3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="100dp"/>

        <TextView
            android:id="@+id/currentcoinsinn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You currently have: 99999999 coins"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/healcost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The cost: 9999999 coins"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/emptystring4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Confirm Payment" />

        <TextView
            android:id="@+id/emptystring2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="200dp"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>