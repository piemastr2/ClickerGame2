<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musiccoder.clickergame2.ShopActivity">


    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="739dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/emptystring6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="100dp"/>

        <TextView
            android:id="@+id/Shop_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Shop"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/emptystring5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="100dp"/>

        <Button
            android:id="@+id/shop_weapon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Weapon (Final)" />

        <Button
            android:id="@+id/shop_tree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Trees" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
